{% extends 'base.html.twig' %}

{% block title %}TㅆB Build Log in!{% endblock %}

{% block body %}
<section class="pop-up">
    <div class="security-popup">
      <div class="box text-center">
         <div class="security">
           <img src="{{ asset('img/logo-2copy.png') }}">
           <h3 class="text-white">Working Verification</h3>
           <p>TㅆB BuildHub is a working community that contains working-restricted content. </br> You must be a worker to enter.</p>
            <button class="close btn mx-3 my-2" id="closebtn"> I am a worker - Enter</button>
         </div>
         {# <div class="close"> #}
           {# <button class="btn btn-sm"> I understand</button> #}
         {# </div> #}
   </div>
  </section>

<form method="post" id="cardTest">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn4 my-3" type="submit">
        Sign in
    </button>
</form>

<video poster="{{ asset('img/bg.jpg') }}" id="bgvid" playsinline autoplay muted loop>
<source src="{{ asset('img/tbconstruhub.webm') }}"type="video/webm">
<source src="{{ asset('img/tbconstruhub.mp4') }}" type="video/mp4">
<form class="container" method="post">
</video>
{% endblock %}
