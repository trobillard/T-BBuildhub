{% extends 'base.html.twig' %}

{% block title %}Tã…†B Build Project{% endblock %}

{% block body %}
{# Card displaying the project #}
<div class="example-wrapper mainbg text-center">
    <div class="card text-center my-5" id="cardtestorange" style="width: 100%; min-height: 20rem">
        <div class="card-header">
            <h2>{{project.title}}</h2>
            <h5 class="card-title text-muted">Created the : {{project.createdate|date('d/m/Y')}}</h5>
        </div>
        <div class="card-body">
            <p class="card-text text-dark">{{project.description}}</p>
        </div>
        <div class="card-footer text-muted">
            Deadline : {{project.deadline|date('d/m/Y')}}
        </div>
        <div>
          <button type="button" class="btn1" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Edit
          </button>
          <form method="post" action="{{ path('delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Project?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
            <button class="btn1">Delete</button>
          </form>
        </div>
    </div> 
    <a href="{{ path('index') }}" class="btn">Back to list</a>
</div>
  
  
{# Modal to Edit the Project #}

   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit your project</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
     {{form(form)}}

      </div>
    </div>
  </div>
</div>
    
{% endblock %}
